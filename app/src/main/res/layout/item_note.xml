<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/ground"
    app:cardCornerRadius="@dimen/cardview_radius_corner"
    app:cardElevation="@dimen/cardview_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardview_padding_start"
            android:layout_marginTop="@dimen/cardview_paddingtop"
            android:layout_marginEnd="@dimen/cardview_paddingend"
            android:textSize="@dimen/cardview_text_size_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="@string/title_notes" />

        <TextView
            android:id="@+id/body"
            style="@style/TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_layout_margin"
            android:textSize="@dimen/cardview_text_size_note"
            android:textColor="@color/white"
            android:textStyle="italic"
            tools:text="@string/text_notes" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
